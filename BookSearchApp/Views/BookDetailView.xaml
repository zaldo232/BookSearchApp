<Window x:Class="BookSearchApp.Views.BookDetailView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="책 상세 정보" Height="400" Width="600">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Image Grid.Column="0" Width="120" Height="160" Margin="0 0 10 0"
               Source="{Binding Thumbnail}" />

        <StackPanel Grid.Column="1">
            <TextBlock Text="{Binding Title}" FontSize="18" FontWeight="Bold" TextWrapping="Wrap"/>
            <TextBlock Text="{Binding Publisher}" Margin="0 5 0 0"/>
            <TextBlock Text="{Binding Authors[0]}" />
            <TextBlock Text="{Binding Price, StringFormat='₩{0:N0}'}" Margin="0 5 0 0"/>
            <TextBlock Text="{Binding Contents}" TextWrapping="Wrap" Margin="0 10 0 0"/>
            <Button Content="웹에서 열기" Margin="0 10 0 0" Width="120" Click="OpenUrl_Click" />
        </StackPanel>
    </Grid>
</Window>
